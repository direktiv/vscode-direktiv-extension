{
	"name": "direktiv",
	"displayName": "direktiv",
	"description": "An extension to help use Direktiv",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.56.0"
	},
	"categories": [
		"Other"
	],
	"extensionDependencies": ["redhat.vscode-yaml"],
	"activationEvents": [
		"onCommand:direktiv.connect",
		"onCommand:direktiv.pushWorkflow",
		"onCommand:direktiv.updateWorkflow",
		"onCommand:direktiv.executeWorkflow",
		"onCommand:direktiv.deleteWorkflow",
		"onCommand:direktiv.addInstanceManager",
		"onView:instances"
	],
	"main": "./out/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "instance-view",
					"title": "Direktiv",
					"icon": "resources/direktiv.svg"
				}
			]
		},
		"views": {
			"instance-view":[
				{
					"id": "instances",
					"name": "Instances"
				}
			]
		},
		"commands": [
			{
				"title": "Add Direktiv Service",
				"command": "direktiv.addInstanceManager"
			},
			{
				"title": "Download Workflows",
				"command": "direktiv.connect"
			},
			{
				"title": "Upload Workflow",
				"command": "direktiv.pushWorkflow"
			},
			{
				"title": "Update Workflow",
				"command": "direktiv.updateWorkflow"
			},
			{
				"title": "Execute Workflow",
				"command": "direktiv.executeWorkflow"
			},
			{
				"title": "Delete Workflow",
				"command": "direktiv.deleteWorkflow"
			},
			{
				"title": "Cancel Instance",
				"command": "direktiv.cancelInstance"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "direktiv.addInstanceManager",
					"when": "view == instances"
				}
			],
			"view/item/context": [
				{
					"command": "direktiv.cancelInstance",
					"when": "viewItem == instance"
				}
			],
			"explorer/context": [
				{
					"when": "explorerResourceIsFolder",
					"command": "direktiv.connect"
				},
				{
					"when": "resourceFilename =~ /.direktiv.yaml/", 
					"command": "direktiv.pushWorkflow",
					"group": "direktiv@1"
				},
				{
					"when": "resourceFilename =~ /.direktiv.yaml/",
					"command": "direktiv.updateWorkflow",
					"group": "direktiv@2"
				},
				{
					"when": "resourceFilename =~ /.direktiv.yaml/",
					"command": "direktiv.executeWorkflow",
					"group": "direktiv@3"
				},
				{
					"when": "resourceFilename =~ /.direktiv.yaml/",
					"command": "direktiv.deleteWorkflow",
					"group": "direktiv@4"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.56.0",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"eslint": "^7.19.0",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"typescript": "^4.1.3",
		"vscode-test": "^1.5.0"
	},
	"dependencies": {
		"dayjs": "^1.10.5",
		"mkdirp": "^1.0.4",
		"node-fetch": "^2.6.1",
		"yaml": "^1.10.2"
	}
}
